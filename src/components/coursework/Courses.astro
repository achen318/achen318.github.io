---
import type { CourseItem } from '../../types';
import Subsection from '../Subsection.astro';
import Course from './Course.astro';

export interface Props {
  semester: string;
  courses: CourseItem[];
}

const { semester, courses } = Astro.props;
---

<Subsection subtitle={semester}>
  <ul class="list-disc space-y-1 pl-8">
    {courses.map((course) => <Course course={course} />)}
  </ul>
</Subsection>
