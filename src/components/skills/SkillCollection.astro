---
import Skill from './Skill.astro';
import type { SkillItem } from '../../types';

export interface Props {
  name: string;
  skills: SkillItem[];
}

const { name, skills } = Astro.props;
---

<fieldset
  class="grid grid-cols-2 place-items-center gap-8 border px-8 py-4 sm:grid-cols-4"
>
  <legend class="rounded-full border p-2 text-center font-bold">{name}</legend>
  {skills.map((skill: SkillItem) => <Skill skill={skill} />)}
</fieldset>
