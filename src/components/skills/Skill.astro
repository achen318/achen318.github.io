---
import { Icon } from 'astro-icon';
import type { SkillItem } from '../../types';

export interface Props {
  skill: SkillItem;
}

const { skill } = Astro.props;
---

<div>
  <Icon class="m-auto h-16" name={skill.icon} />
  <h3 class="text-center text-xl font-bold text-white">{skill.name}</h3>
  <p class="text-center text-lg text-white">{skill.year}</p>
</div>
