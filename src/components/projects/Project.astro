---
import type { ProjectItem } from '../../types';

export interface Props {
  project: ProjectItem;
}

const { project } = Astro.props;
---

<div>
  <h3 class="text-xl font-bold">
    <a href={project.github} target="_blank">{project.name}</a>
  </h3>
  <p class="text-lg">{project.description}</p>
</div>
